<Window x:Class="WPF_Laba7_test2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Laba7_test2"
        mc:Ignorable="d"
        Title="Lab7-test Work with BD" Height="360" Width="680">
    
    <!--<Window.Background>
        </Window.Background>-->
            
    <Window.Resources>
        <!--<Style TargetType="Window">
            <Setter Property="Background" Value="I"/>
            <Image Source="pack://application:,,,/Resources/Open.png"  Height="38"/>

        </Style>-->

    

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="Background" Value="BlanchedAlmond"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <Window.Background>
    
        <ImageBrush ImageSource="C:\Users\kalil\Desktop\background.jpg" Opacity="0.9"></ImageBrush>
    </Window.Background>


    <Grid Margin="30. 20. 8. 30">
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\kalil\Desktop\background.jpg" Opacity="0.3"></ImageBrush>
           
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.01*"/>

        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" VerticalAlignment="Center">
            <Button Name="btnShowList"  Content="Show" Margin="5" />
            <Button Name="btnShowList2"  Content="Insert"/>
            <Button Name="btnShowList3"  Content="Find"/>
            <Button Name="btnShowList4"  Content="Update"/>
            <Button Name="btnShowList5"  Content="Delete"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Background="AliceBlue" Margin="10,10,27,10">
        
            <Grid x:Name="gridPerson">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="0.2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions  >
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="15"/>
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Grid.Row="0" >Id</Label>
                <TextBlock x:Name="textBoxPersonId" Grid.Column="1" Grid.Row="0" Text="{Binding Path=PersonId}">Id</TextBlock>

                <Label Grid.Column="0" Grid.Row="1" >Name</Label>
                <TextBlock x:Name="textBoxName" Grid.Column="1" Grid.Row="1" Text="{Binding Path=Name}">Name</TextBlock>

                <Label Grid.Column="0" Grid.Row="2" >Age</Label>
                <TextBlock x:Name="textAge" Grid.Column="1" Grid.Row="2" Text="{Binding Path=Age}">Age</TextBlock>

                <Label Grid.Column="2" Grid.Row="0" >Company</Label>
                <TextBlock x:Name="textBoxCompany" Grid.Column="3" Grid.Row="0" Text="{Binding Path=PersonName}">Company</TextBlock>

                <Label Grid.Column="2" Grid.Row="1" >Salary</Label>
                <TextBlock x:Name="textBoxSalary" Grid.Column="3" Grid.Row="1" Text="{Binding Path=PersonId}">Salary</TextBlock>

               
                <Border Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="5" Grid.RowSpan="5" Background="LawnGreen" Opacity="0.3" Margin="7, 7, 7, 7">
                    <ListBox Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="5" Grid.RowSpan="5" x:Name="listBix" Margin="10, 10, 10, 10" ItemsSource="{Binding}" Height="Auto" Background="Yellow" Opacity="0.25"/>
                </Border>

            </Grid>








        </StackPanel>



    </Grid>
</Window>